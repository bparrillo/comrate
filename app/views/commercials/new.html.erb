<%= render partial: "shared/navbar" %>
<h1>New Commercial</h1>
<%= flash[:notice] %>


<%= form_for @commercial, html: {multipart: true} do |f| %>
  <%= hidden_field_tag 'user', @user %>
  <p>
    <%= f.label :title %> 
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :video %>
    <%= f.file_field :video, class: "file-selector" %>
  </p>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody class="btn-toolbar">
      <%= f.fields_for :com_payment do |pay_fields| %>
        <tr><td>type:</td> <td><%= pay_fields.text_field  :card_type %></td></tr>
        <tr><td>number:</td> <td><%= pay_fields.text_field  :number %></td></tr>
        <tr><td>expire_month:</td> <td><%= pay_fields.text_field  :expire_month %></td></tr>
        <tr><td>expire_year:</td> <td><%= pay_fields.text_field :expire_year %></td></tr>
        <tr><td>cvv2:</td> <td><%= pay_fields.text_field  :cvv2 %></td></tr>
        <tr><td>first_name:</td> <td><%= pay_fields.text_field  :first_name %></td></tr>
        <tr><td>last_name:</td> <td><%= pay_fields.text_field  :last_name %></td></tr>
        <tr><td>address:</td> <td><%= pay_fields.text_field  :address %></td></tr>
        <tr><td>city:</td> <td><%= pay_fields.text_field  :city %></td></tr>
        <tr><td>state:</td> <td><%= pay_fields.text_field  :state %></td></tr>
        <tr><td>postal_code:</td> <td><%= pay_fields.text_field  :postal_code %></td></tr>
        <tr><td>country_code:</td> <td><%= pay_fields.text_field  :country_code %></td></tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <%= f.submit %>
  </p>
<% end %>


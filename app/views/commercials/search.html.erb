<%= render partial: "shared/navbar" %>

<h1>Commercials</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="btn-toolbar">
    <% @commercials.each do |commercial| %>
      <tr>
        <td><%= link_to commercial.title, commercial, class: "btn btn-success" %></td>
        <td><%= "Description: #{commercial.description}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render :partial => "shared/page", locals: {com_count: @commercials.count, cur_path: lambda { |x| search_path( x.merge(search: @search))}} %>
